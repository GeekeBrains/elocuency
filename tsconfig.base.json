{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ES6", "ES2017", "ESNext.AsyncIterable"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@elocuency/agent": ["libs/agent/src/index.ts"],
      "@elocuency/install": ["libs/commands/install/src/index.ts"],
      "elo/back/core/*": ["libs/typescript/back/core/src/*"],
      "elo/back/server/*": ["apps/back/elo-server/src/*"],
      "elo/back/server/open-api": ["apps/back/elo-server/open-api"],
      "elo/front/react/*": ["libs/typescript/front/react/src/*"],
      "elo/media/*": ["libs/media/*"]
    }
  },
  "exclude": ["node_modules"]
}
