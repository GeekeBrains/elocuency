{
  "name": "agent",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/commands/agent/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "language-teacher:build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": [
          {
            "command": "cd ../agents/language-teacher && yalc update @elocuency/aws-agent-helper && yarn build"
          }
        ]
      }
    },
    "language-teacher:start:test": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": [
          {
            "command": "cd ../agents/language-teacher && yalc update @elocuency/aws-agent-helper && yarn start:test"
          }
        ]
      }
    }
  }
}
